		</subsegment>
		<subsegment name="S3">
			<size>0x10000</size>
		</subsegment>
		<subsegmentList name="S" numberOfEntries="30" startID="4">
			<size>0x20000</size>
		</subsegmentList>
	</segment>
	<init>
		<assignment name="BR0" type="uri">ToppcKernel.pBR0</assignment>
		<assignment name="OR0" type="uri">ToppcKernel.pOR0</assignment>
	</init>
